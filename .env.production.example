# ==============================================
# Production Environment - pornguru.cam
# Copy this to .env.production and fill in values
# ==============================================

APP_NAME="PornGuru Cam"
APP_ENV=production
APP_KEY=  # Generate with: php artisan key:generate --show
APP_DEBUG=false
APP_URL=https://pornguru.cam

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

# ==============================================
# PostgreSQL - Cam Models Database (External)
# ==============================================
CAM_DB_HOST=  # Your PostgreSQL host
CAM_DB_PORT=5432
CAM_DB_DATABASE=creator-admin-dev
CAM_DB_USERNAME=cam_reader
CAM_DB_PASSWORD=  # Your password

# ==============================================
# PostgreSQL - Users, Favorites, Sessions
# ==============================================
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=porngurucam
DB_USERNAME=porngurucam
DB_PASSWORD=  # Generate a strong password

# ==============================================
# Session & Cache
# ==============================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=pornguru.cam
SESSION_SECURE_COOKIE=true

CACHE_STORE=redis
QUEUE_CONNECTION=redis

# ==============================================
# Redis
# ==============================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ==============================================
# Logging
# ==============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

# ==============================================
# Security
# ==============================================
BCRYPT_ROUNDS=12

# ==============================================
# Mail (Optional - for password reset, etc)
# ==============================================
MAIL_MAILER=log
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@pornguru.cam
MAIL_FROM_NAME="${APP_NAME}"

# ==============================================
# Filesystem
# ==============================================
FILESYSTEM_DISK=local
BROADCAST_CONNECTION=log

# ==============================================
# Anthropic API (for translations & FAQ generation)
# ==============================================
ANTHROPIC_API_KEY=  # Get from console.anthropic.com

# ==============================================
# Vite (not needed in production, assets are built)
# ==============================================
VITE_APP_NAME="${APP_NAME}"
